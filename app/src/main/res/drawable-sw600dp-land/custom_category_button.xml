<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/active_category_color"
                android:endColor="@color/active_category_color"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/active_category_color" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/active_category_color"
                android:endColor="@color/active_category_color"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/active_category_color" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item  >
        <shape>
            <solid
                android:color="@color/inactive_category_color" />
            <stroke
                android:width="1dp"
                android:color="@color/inactive_category_color" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>