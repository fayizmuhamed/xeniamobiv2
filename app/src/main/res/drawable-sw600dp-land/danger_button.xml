<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/danger_button_pressed_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/danger_button_pressed_bg" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="@color/danger_button_disabled_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/danger_button_disabled_bg" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/danger_button_color"
                android:endColor="@color/danger_button_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/danger_button_color" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>