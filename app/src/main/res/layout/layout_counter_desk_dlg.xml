<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:theme="@style/AppTheme.AppBarOverlay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:id="@+id/toolbar_title"
            android:layout_centerInParent="true"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:text="Desk" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <TextView
                android:id="@+id/lblCounterDeskTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Tax"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <TextView
                android:id="@+id/lblCounterDeskTotalTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gross Amount"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <TextView
                android:id="@+id/lblCounterDeskGrossAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtCounterDeskDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </com.rengwuxian.materialedittext.MaterialEditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round Off"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <TextView
                android:id="@+id/lblCounterDeskRoundOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingVertical="10dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Amount"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <TextView
                android:id="@+id/lblCounterDeskNetAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment mode"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_color_secondary"
                android:id="@+id/lblCounterDeskPaymentMode"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rbgCounterDeskPaymentMode"
                >

                <RadioButton
                    android:id="@+id/rbtnCounterDeskPaymentModeCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:checked="true"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:text="Cash"
                    android:buttonTint="@color/colorAccent"
                    >
                </RadioButton>


                <RadioButton
                    android:id="@+id/rbtnCounterDeskPaymentModeCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:text="Card"
                    android:buttonTint="@color/colorAccent"
                    >
                </RadioButton>
                <RadioButton
                    android:id="@+id/rbtnCounterDeskPaymentModeCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:text="Credit"
                    android:buttonTint="@color/colorAccent"
                    >
                </RadioButton>
                <RadioButton
                    android:id="@+id/rbtnCounterDeskPaymentModeBoth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:text="Both"
                    android:buttonTint="@color/colorAccent"
                    >
                </RadioButton>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:id="@+id/layCounterDeskCashReceived"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash Received"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtCounterDeskCashReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
                <requestFocus/>
            </com.rengwuxian.materialedittext.MaterialEditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            android:id="@+id/layCounterDeskCardReceived"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Received"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtCounterDeskCardReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </com.rengwuxian.materialedittext.MaterialEditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layCounterDeskChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_secondary"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtCounterDeskChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ems="6"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:text="1000.00"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color_secondary"
                android:maxLength="6"
                android:gravity="end">
            </com.rengwuxian.materialedittext.MaterialEditText>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layCounterDeskFooter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/footer_total_bg"
            android:padding="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblCounterDeskBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/size_normal_text"
                    android:fontFamily="sans-serif"
                    android:text="Balance"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/txtCounterDeskBalance"
                    android:layout_toRightOf="@+id/lblCounterDeskBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/size_large_text"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:text="300.00"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnCounterDeskSave"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/proceed_total_bg"
            android:padding="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_button_label"
                android:textColor="@color/text_color_primary"
                android:layout_centerInParent="true"
                android:textSize="@dimen/size_normal_text"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
