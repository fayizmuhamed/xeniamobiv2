<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/order_detail_item_bg"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    >
    <TextView
        android:id="@+id/lblSaleReportItemInvoiceDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:text="#"
        android:textColor="@color/text_color_secondary"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/size_normal_text"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/lblSaleReportItemInvoiceNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:text="Invoice No"
        android:textColor="@color/text_color_secondary"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/size_normal_text"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/lblSaleReportItemAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:text="Amount"
        android:textColor="@color/text_color_secondary"
        android:textAlignment="viewEnd"
        android:layout_gravity="center_vertical|end"
        android:textSize="@dimen/size_normal_text"
        android:fontFamily="sans-serif"
        tools:ignore="RtlCompat"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

</LinearLayout>

