<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.spidertechnosoft.app.xeniamobi_v2.view.PointOfSaleActivity"
    tools:showIn="@layout/activity_point_of_sale"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layPOSSummaryHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch"
            android:background="@color/lighter_gray">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_invoice_no"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/size_small_text"
                    android:textColor="@color/text_color_primary"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:labelFor="@+id/txtPOSInvoiceNo"
                   />
                <EditText
                    android:id="@+id/txtPOSInvoiceNo"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:minEms="4"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/editable_text_view_bg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:textColor="@color/text_color_secondary"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:inputType="text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_invoice_date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/size_small_text"
                    android:textColor="@color/text_color_primary"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:labelFor="@+id/txtPOSInvoiceNo"
                    />
                <EditText
                    android:id="@+id/txtPOSInvoiceDate"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:minEms="6"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/editable_text_view_bg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:textColor="@color/text_color_secondary"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/editable_text_view_bg"
                android:layout_marginEnd="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_mode_of_payment"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_small_text"
                    android:textColor="@color/text_color_primary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:labelFor="@+id/spnPOSModeOfPayment"
                    android:background="@android:color/darker_gray"/>
                <Spinner
                    android:id="@+id/spnPOSModeOfPayment"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:minWidth="100dp"
                    android:textColor="@color/text_color_primary"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="@drawable/editable_text_view_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_tax"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_small_text"
                    android:textColor="@color/text_color_primary"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:labelFor="@+id/spnPOSTaxType"
                    android:background="@android:color/darker_gray"/>
                <Spinner
                    android:id="@+id/spnPOSTaxType"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:minWidth="100dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_normal_text"
                    android:enabled="false"
                    android:textColor="@color/text_color_primary"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    />
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

       <!-- <LinearLayout
            android:id="@+id/layPOSSummaryHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/lighter_gray"
            android:orientation="horizontal">

        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/layPOSSummaryBarCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:layout_below="@+id/layPOSSummaryHeader">
            <Button
                android:id="@+id/btnPOSScanBarcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/label_scan_barcode"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/size_normal_text"
                android:textColor="@color/text_color_secondary"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layPOSSummaryItemDetails"
            android:layout_below="@+id/layPOSSummaryBarCode"
            android:layout_above="@+id/layPOSSummaryFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="@string/order_details_table_item_code"
                    android:textColor="@color/text_color_primary"
                    android:background="@color/order_details_table_head_bg"
                    android:textSize="@dimen/size_normal_text"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:text="@string/order_details_table_item_qty"
                    android:textColor="@color/text_color_primary"
                    android:textAlignment="center"
                    android:background="@color/order_details_table_head_alternate_bg"
                    android:textSize="@dimen/size_normal_text"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:text="@string/order_details_table_item_rate"
                    android:textColor="@color/text_color_primary"
                    android:textAlignment="center"
                    android:background="@color/order_details_table_head_bg"
                    android:textSize="@dimen/size_normal_text"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:text="@string/order_details_table_item_amount"
                    android:textColor="@color/text_color_primary"
                    android:textAlignment="center"
                    android:background="@color/order_details_table_head_bg"
                    android:textSize="@dimen/size_normal_text"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
            </LinearLayout>
