            <ListView
                android:id="@+id/lvPOSDetailsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="2dp"
                android:divider="@android:color/transparent"
                ></ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layPOSSummaryFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnPOSPrint"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_print"
                        android:enabled="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:textColor="@color/text_color_primary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:drawableRight="@drawable/ic_print"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/info_button"
                        android:drawableEnd="@drawable/ic_print"
                        android:layout_marginEnd="10dp" />
                    <Button
                        android:id="@+id/btnPOSRefresh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_refresh"
                        android:enabled="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:textColor="@color/text_color_primary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:drawableRight="@drawable/ic_refresh"
                        android:background="@drawable/refresh_button"
                        android:drawableEnd="@drawable/ic_refresh" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <Button
                        android:id="@+id/btnPOSDelete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_delete"
                        android:enabled="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:textColor="@color/text_color_primary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:drawableRight="@drawable/icon_delete"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/danger_button"
                        android:drawableEnd="@drawable/icon_delete"
                        android:layout_marginEnd="10dp" />
                    <Button
                        android:id="@+id/btnPOSClose"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_close"
                        android:enabled="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:textColor="@color/text_color_primary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:drawableRight="@drawable/ic_close"
                        android:background="@drawable/close_button"
                        android:drawableEnd="@drawable/ic_close" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnPOSSave"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="@string/label_save"
                    android:enabled="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/size_medium_text"
                    android:textColor="@color/text_color_primary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_save"
                    android:background="@drawable/green_button"
                    android:drawableEnd="@drawable/ic_save" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/lighter_gray">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_salesman"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:textColor="@color/text_color_secondary"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textAllCaps="true"

                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp" />
                    <Spinner
                        android:id="@+id/spnPOSStaff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:textColor="@color/text_color_primary"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="end"
                    android:background="@color/lighter_gray">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_tax"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_small_text"
                        android:textColor="@color/text_color_secondary"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textAllCaps="true"

                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp" />
                    <EditText
                        android:id="@+id/txtPOSTotalTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:enabled="false"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:selectAllOnFocus="true"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color_secondary"
                        android:maxLength="6"
                        android:gravity="end|center_vertical"
                        android:background="@drawable/editable_text_view_bg"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/net_value"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_small_text"
                        android:textColor="@color/text_color_secondary"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:textAlignment="textEnd"
                        android:id="@+id/txtPOSNetValue"
                        android:enabled="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:selectAllOnFocus="true"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color_secondary"
                        android:maxLength="6"
                        android:gravity="end|center_vertical"
                        android:background="@drawable/editable_text_view_bg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="end"
                    android:background="@color/lighter_gray">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/discount"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_small_text"
                        android:textColor="@color/text_color_secondary"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp" />
                    <EditText
                        android:id="@+id/txtPOSDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:selectAllOnFocus="true"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color_secondary"
                        android:maxLength="6"
                        android:gravity="end|center_vertical"
                        android:background="@drawable/editable_text_view_bg"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/round_off"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_small_text"
                        android:textColor="@color/text_color_secondary"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:textAlignment="textEnd"
                        android:id="@+id/txtPOSRoundOff"
                        android:enabled="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/size_normal_text"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:selectAllOnFocus="true"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color_secondary"
                        android:maxLength="6"
                        android:gravity="end|center_vertical"
                        android:background="@drawable/editable_text_view_bg"
                        />
                </LinearLayout>
